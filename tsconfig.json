{
    "compilerOptions": {
        "baseUrl": "./",
        "composite": true,
        "declarationDir": "./decl",
        "rootDir": "src",
        "module": "esnext",
        "target": "esnext",
        "lib": [
            "es6",
            "esnext",
            "dom",
            "es2016",
            "es2017"
        ],
        "jsx": "react-jsx",
        "jsxFactory": "",
        "jsxFragmentFactory": "",
        "declaration": true,
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "types": [
            "node"
        ],
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "checkJs": false,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "strict": false,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@@/*": [
                "./src/.umi/*"
            ]
        }
    },
    "compileOnSave": true,
    "include": [
        "src",
        "test.d.ts",
        "node_modules/@types/css-font-loading-module/index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "lib",
        "test",
        "typings/browser.d.ts",
        "typings/browser"
    ]
}